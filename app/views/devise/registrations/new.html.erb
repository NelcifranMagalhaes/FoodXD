
<div class="container">
	<div class="row">

		<h3>Sign up</h3>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),class: 'col s12') do |f| %>
		  <%= f.error_notification %>

		 	<div class="row">
		    	<div class="input-field col s6">
		   	 		<%= f.input :email, required: false, autofocus: true %>
		    	</div>
		  	</div>
		 	<div class="row">
		    	<div class="input-field col s6">
		    		<%= f.input :password, required: true,hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
		    	</div>
		  	</div>

		 	<div class="row">
		    	<div class="input-field col s6">
    				<%= f.input :password_confirmation, required: true %>
		    	</div>
		  	</div>
		  	<br>

	  
		  <div class="row">
		  	<div class="input-field col s6 ">
		    	<%= f.button :submit, "Enviar",class: 'btn waves-effect waves-light' %>
		    	<%= render "devise/shared/links" %>

			</div>
		  </div>
		<% end %>

	</div>

</div>