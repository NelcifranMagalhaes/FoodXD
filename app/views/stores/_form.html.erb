<div class="container">
  <div class="row">
    <%= simple_form_for @store,class: 'col s12' do |f| %>
      <%= f.error_notification errors:true%>

  <div class="row">
    <div class="input-field col s6">
      <%= f.input :name %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.input :address %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= f.input :longitude %>
    </div>
  </div>

    <div class="row">
    <div class="input-field col s6">
      <%= f.input :latitude %>
    </div>
  </div>

   <div class="file-field input-field">
      <div class="btn">
        <span>Logo</span>
        <%= f.input :logo,label: false %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>

  <h4>Comidas</h4>
  <div id="foods">
    <%= f.simple_fields_for :foods do |food| %>
      <%= render 'food_fields', f: food %>
    <% end %>
   </div>

   <div class="links">
     <%= link_to_add_association '+Comida', f, :foods ,class: "btn waves-effect waves-light blue right white-text"%>
     <br><br>
   </div>

  <div class="row center-align">
      <%= f.button :submit ,class: 'btn btn-primary grey'%>
  </div>
<% end %>
  </div>
</div>
